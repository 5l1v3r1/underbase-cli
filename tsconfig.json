{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "declaration": true,
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "pretty": true,
    "removeComments": true,
    "traceResolution": false,
    "paths": {
      "*": [
        "node_modules/@types/*",
        "src/*",
        "*"
      ],
      "af-data-models": [
        "src/*"
      ]
    }
  },
  "files": [
    "src/cli.ts"
  ],
  "include": [
    "test/**/*"
  ]
}

